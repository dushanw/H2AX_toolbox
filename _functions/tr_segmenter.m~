% 20200429 modified by Dushan N. Wadduwage (wadduwage@fas.harvard.edu)
% segmenter

function net = tr_segmenter(segNet,imds_gt,pxds_gt,pram)
    
    %% network parameters 
    patchSize       = [pram.Nx pram.Nx];
    miniBatchSize   = 64;
    numClasses      = pram.N_classes;
    classNames      = pram.classNames;
    pixelLabelIDs   = pram.pxLblIds;

    %% set other datastore parameters
    I_temp          = imds_gt.read;     
    imds_gt.reset;    
    N_PatchesPerImg = prod(size(I_temp)./patchSize)*16;
    
    %% image patcdata stores
    patchds_tr                  = randomPatchExtractionDatastore(In_imds_tr,Out_pxds_tr,patchSize,'PatchesPerImage',N_PatchesPerImg);
    patchds_tr.MiniBatchSize    = miniBatchSize;
    if ~isempty(pram.dir_val_img)
        In_imds_val             = imageDatastore(       pram.dir_val_img,   'ReadFcn',@(filename)readRescale(filename,[]));
        Out_pxds_val            = pixelLabelDatastore(  pram.dir_val_lbl,   classNames,pixelLabelIDs);
        patchds_val             = randomPatchExtractionDatastore(In_imds_val,Out_pxds_val,patchSize,'PatchesPerImage',N_PatchesPerImg);
        patchds_tr.MiniBatchSize= miniBatchSize;
    end
    
    if isempty(net0)
        final_pxClasLayer = dicePixelClassificationLayer('Name','final_pxClasLayer');       % generalized Dice loss classification
        % lgraph = gen_segnet_dncnnWithSkips(patchSize, numClasses, final_pxClasLayer);       % initialize network
         lgraph = gen_segnet_withNormalization_dncnnWithSkips(patchSize, numClasses, final_pxClasLayer);       % initialize network with normalization
    else
        lgraph = layerGraph(net0);
    end
        
    %% train network
    maxEpochs = 8;
    epochIntervals = 10;
    initLearningRate = 0.1;
    learningRateFactor = 0.1;
    l2reg = 0.0001;
    options = trainingOptions('sgdm', ...
        'Momentum',0.9, ...
        'InitialLearnRate',initLearningRate, ...
        'LearnRateSchedule','piecewise', ...
        'LearnRateDropPeriod',max(maxEpochs/4,1), ...
        'LearnRateDropFactor',learningRateFactor, ...
        'L2Regularization',l2reg, ...
        'MaxEpochs',maxEpochs ,...        
        'ValidationFrequency', 500, ...
        'MiniBatchSize',miniBatchSize, ...
        'GradientThresholdMethod','l2norm', ...
        'Plots','training-progress', ...
        'GradientThreshold',0.01,...
        'ExecutionEnvironment','multi-gpu');                % 'ValidationData',patchds_val,...

    net = trainNetwork(patchds_tr,lgraph,options);
    save(['./_trainedNetworks/'...
           pram.net_nameStem ...
           sprintf('_%dx%d_%s.mat',patchSize(1),patchSize(2),date)],...
           'net');

end